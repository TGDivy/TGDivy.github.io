---
import type { CollectionEntry } from "astro:content";
import { humanize } from "@lib/utils/textConverter";
import { Image } from "astro:assets";

interface Props {
  imageUrl?: string;
  href?: string;
  imageTransition?: string;
  title?: string;
  titleTransition?: string;
  extra?: string;
  description?: string;
  bordered?: boolean;
}

const {
  imageUrl,
  href,
  imageTransition,
  title,
  titleTransition,
  description,
  bordered,
} = Astro.props;

const borderClass = bordered
  ? "border-2 border-transparent hover:border-slate-700 group"
  : "";
---

<div
  class={`relative flex flex-col w-full rounded-xl bg-white text-gray-700 transition-all duration-500 ease-in-out group ${borderClass}`}
>
  {
    imageUrl && (
      <div class="relative overflow-hidden text-white shadow-lg rounded-xl bg-blue-gray-500 bg-clip-border shadow-blue-gray-500/40 h-[230px] min-h-[230px] max-h-[230px]">
        <a
          href={href}
          class="rounded-lg block hover:text-primary overflow-hidden"
        >
          <Image
            class="group-hover:scale-[1.03] transition duration-300 w-full object-cover h-[230px] object-center"
            src={imageUrl}
            alt={title || "Image"}
            transition:name={imageTransition}
            width={445}
            height={330}
          />
        </a>
      </div>
    )
  }
  <div class="p-6 h-full flex flex-col">
    {
      title && (
        <div class="flex items-center justify-between mb-3">
          <h5 class="block font-sans text-xl antialiased font-medium leading-snug tracking-normal text-blue-gray-900">
            <a
              href={`/${href}`}
              transition:name={titleTransition}
              class="block hover:text-primary transition duration-300"
            >
              {humanize(title)}
            </a>
          </h5>
        </div>
      )
    }
    <p
      class="block font-sans text-base antialiased font-light leading-relaxed text-gray-700 flex-1"
    >
      <a href={href} class="block hover:text-primary transition duration-300">
        {description}
      </a>
    </p>
    <slot />
    {Astro.slots.extra && <div class="mt-4">{Astro.slots.extra}</div>}
  </div>
</div>
