---
import { Image } from "astro:assets";
import Base from "@layouts/Base.astro";
import { markdownify } from "@lib/utils/textConverter";
import { getEntryBySlug } from "astro:content";

const entry = await getEntryBySlug("about", "index");
const { Content } = await entry.render();
const { title, description, meta_title, image, what_i_do } = entry.data;
---

<Base
  title={title}
  meta_title={meta_title}
  description={description}
  image={image}
>
  <div
    class="mx-auto max-w-7xl lg:px-8 lg:bg-transparent bg-contentbackground container"
  >
    <div class="lg:grid lg:grid-cols-12">
      <div
        class="z-10 lg:col-span-4 lg:col-start-1 lg:row-start-1 lg:py-16 lg:bg-transparent"
      >
        <div class="px-4 mx-auto max-w-xs sm:px-6 md:max-w-md lg:p-0">
          {
            image && (
              <div class="img-cover mb-8">
                <Image
                  src={image}
                  width={295}
                  height={395}
                  alt={title}
                  class="object-cover object-center w-full max-w-md rounded-3xl shadow-2xl -rotate-3 aspect-[1/1]"
                />
              </div>
            )
          }
        </div>
      </div>

      <div
        class="relative rounded-3xl lg:grid lg:grid-cols-10 lg:col-span-10 lg:col-start-3 lg:row-start-1 lg:items-center lg:bg-contentbackground"
      >
        <div
          class="hidden overflow-hidden absolute inset-0 rounded-3xl pointer-events-none lg:block"
          aria-hidden="true"
        >
          <svg
            class="absolute bottom-full left-full opacity-20 transform -translate-x-2/3 translate-y-1/3 xl:top-0 xl:bottom-auto xl:translate-y-0"
            width="404"
            height="384"
            fill="none"
            viewBox="0 0 404 384"
            aria-hidden="true"
          >
            <defs>
              <pattern
                id="64e643ad-2176-4f86-b3d7-f2c5da3b6a6d"
                x="0"
                y="0"
                width="20"
                height="20"
                patternUnits="userSpaceOnUse"
              >
                <rect
                  x="0"
                  y="0"
                  width="4"
                  height="4"
                  class="text-accent-500"
                  fill="lightblue"></rect>
              </pattern>
            </defs>
            <rect
              width="404"
              height="384"
              fill="url(#64e643ad-2176-4f86-b3d7-f2c5da3b6a6d)"></rect>
          </svg>
          <svg
            class="absolute top-full opacity-40 transform -translate-x-1/3 -translate-y-1/3 xl:-translate-y-1/2"
            width="404"
            height="384"
            fill="none"
            viewBox="0 0 404 384"
            aria-hidden="true"
          >
            <defs>
              <pattern
                id="64e643ad-2176-4f86-b3d7-f2c5da3b6a6d"
                x="0"
                y="0"
                width="20"
                height="20"
                patternUnits="userSpaceOnUse"
              >
                <rect
                  x="0"
                  y="0"
                  width="4"
                  height="4"
                  class="text-accent-500"
                  fill="currentColor"></rect>
              </pattern>
            </defs>
            <rect
              width="404"
              height="384"
              fill="url(#64e643ad-2176-4f86-b3d7-f2c5da3b6a6d)"></rect>
          </svg>
        </div>

        <div
          class="py-12 mx-auto sm:py-16 sm:max-w-3xl lg:col-span-7 lg:col-start-4 lg:max-w-none"
        >
          <h2
            class="text-4xl font-bold tracking-tighter sm:text-5xl"
            id="about-heading"
          >
            {title}
          </h2>
          <div class="content text-lg text-primary-300 md:text-primary-100">
            <Content />
          </div>
          <a href="/contact" class="btn btn-primary text-white py-2"
            >Get In Touch</a
          >
        </div>
      </div>
    </div>
  </div>
  <section class="section pt-0">
    <div class="container">
      <h3 class="page-heading mb-10">{what_i_do.title}</h3>
      <div class="row justify-center gy-4 text-center">
        {
          what_i_do.items.map((item: any) => (
            <div class="lg:col-4 md:col-6">
              <i class="{{.icon}} fa-3x text-primary mb-4" />
              <h4 class="text-dark font-weight-700 mb-3">{item.title}</h4>
              <p>{item.description}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>
</Base>
