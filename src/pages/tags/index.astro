---
import Base from "@layouts/Base.astro";
import Tags from "@layouts/components/basic/Tags.astro";
import { getTaxonomy } from "@lib/taxonomyParser.astro";
import { humanize } from "@lib/utils/textConverter";

import { FaHashtag } from "react-icons/fa/index.js";

const tagsPosts = await getTaxonomy("posts", "tags");
const tagsProject = await getTaxonomy("projects", "tags");
const tags = [...tagsPosts, ...tagsProject];
---

<Base title={"Tags"}>
  <section class="section">
    <div class="container text-center">
      <h1 class="h2 page-heading">Tags</h1>
      <Tags tags={tags} counts size="lg" />
    </div>
  </section>
</Base>
